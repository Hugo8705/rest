extends layout

block content
  h1= title
  p Bienvenue sur ce test
    // WRAPPER
    #wrapper

        #feedback
            p

        // USER LIST
        h2 Liste utilisateur
        #userList
            table#tableUserList
                thead
                    th(data-sort="string" data-sort-default="asc") UserName
                    th(data-sort="string" data-sort-default="asc") Email
                    th Delete
                    th Modify
                tbody
        // /USER LIST

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Age:
                |  <span id='userInfoAge'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'></span>
                br
                strong Location:
                |  <span id='userInfoLocation'></span>
        // /USER INFO

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='gender')
                br
                button#btnAddUser Add User
        // /ADD USER

        // MODIFY USER
        #modifyUser
            h2 Modify User
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='gender')
                br
                button#btnModifyUser Modify User
                a#hideModify(href="#") Fermer
        // /ADD USER

    // /WRAPPER
